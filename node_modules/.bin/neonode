#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//bin/sh" ]; then
  "$basedir//bin/sh"  "$basedir/../neonode/node_modules/.bin/neonode" "$@"
  ret=$?
else 
  /bin/sh  "$basedir/../neonode/node_modules/.bin/neonode" "$@"
  ret=$?
fi
exit $ret
